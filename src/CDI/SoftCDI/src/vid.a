	nam vid
	use c:\DEFS\OSKDEFS.D
	use "softcdi.d"
	use "softcdi.m"

typelang	equ	(Devic<<8)
attrrevs	equ	((ReEnt)<<8)+$99
edition		equ	0
stacksize	equ	0

	psect vid,typelang,attrrevs,edition,stacksize,0

	dc.l	MCD212_Port		Port Address
	dc.b	MCD212_Vector	Trap Vector Number
	dc.b	MCD212_IRQLevel	IRQ Interrupt Level
	dc.b	MCD212_Priority	IRQ Polling Priority
	dc.b	3		Device Mode Capabilities
	dc.w	UCMFM	File Manager Name Offset
	dc.w	VIDEO	Device Driver Name Offset
	dc.w	0		Device Configuration Offset
	dz.b	8		Reserved
	dc.w	$24		Initialization Table Size
	dc.b	DT_UCM	Device Type
* UCM Device descriptor Option
	dz.b	$1B		Reserved
	dc.b	FC_VID	Classes of functions of which device is capable
	dz.b	1		Reserved
	dc.w	PT2Device	Offset to second device name
	dc.w	0			Offset to third device name
	dz.w	1		Reserved

UCMFM		dc.b	"ucm",0
VIDEO		dc.b	"video",0
PT2Device	dc.b	"pt2",0
